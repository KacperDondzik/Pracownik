<Window x:Class="Pracownik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj pracownika"
        Height="300" Width="500"
        Background="LightSteelBlue"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <GroupBox Header="Dane pracownika" Grid.Column="0" Grid.Row="0" Margin="5">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Imię:" Width="70"/>
                    <TextBox Width="140"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Nazwisko:" Width="70"/>
                    <TextBox Width="140"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Stanowisko:" Width="70"/>
                    <ComboBox Width="140">
                        <ComboBoxItem>Kierownik</ComboBoxItem>
                        <ComboBoxItem>Starszy programista</ComboBoxItem>
                        <ComboBoxItem>Młodszy programista</ComboBoxItem>
                        <ComboBoxItem>Tester</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </GroupBox>


        <GroupBox Header="Generowanie hasła" Grid.Column="1" Grid.Row="0" Margin="5">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Ile znaków?" Width="80"/>
                    <TextBox Width="60"/>
                </StackPanel>

                <CheckBox Content="Małe i wielkie litery" IsChecked="True" Margin="0,5"/>
                <CheckBox Content="Cyfry" Margin="0,5"/>
                <CheckBox Content="Znaki specjalne" Margin="0,5"/>

                <Button Content="Generuj hasło" Width="120" Margin="0,10,0,0"/>
            </StackPanel>
        </GroupBox>

    </Grid>
</Window>
